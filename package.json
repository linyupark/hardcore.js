{
  "name": "fp.front.sosho.cn",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "web": "browser-sync start -s \"web\" -f \"./web/**/*\"",
    "riot": "riot -w -s ./src/riot/ ./web/static/riot/",
    "babel:riot": "babel -w ./web/static/riot/ -d ./web/static/riot/",
    "rollup:fp": "onchange ./src/*/*.es6.js ./src/fp.es6.js -- rollup ./src/fp.es6.js -o ./web/static/fp.rollup.js -f umd -n App",
    "babel:fp": "babel -w ./web/static/fp.rollup.js -o ./web/static/fp.js",
    "sass:fp": "node-sass -w -r ./src/sass/fp.sass -o ./web/static/",
    "windev:fp": "start npm run riot && start npm run rollup:fp && start npm run babel:fp && start npm run sass:fp",
    "macdev:fp": "npm run riot & npm run rollup:fp & npm run babel:fp & npm run sass:fp",
    "build:fp": "gulp build:fp"
  },
  "repository": {
    "type": "git",
    "url": "https://git.coding.net/usho/fp.front.sosho.cn.git"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015-ie": "^6.6.2",
    "gulp": "^3.9.1",
    "gulp-uglifyjs": "^0.6.2",
    "onchange": "^3.0.2"
  }
}
