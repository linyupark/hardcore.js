{
  "name": "fp.front.sosho.cn",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "web": "browser-sync start -s \"web\" -f \"./web/**/*\"",
    "riot": "riot -w -s -c ./src/riot/ ./web/static/riot/",
    "rollup:fp": "onchange './src/**/*.es6.js' -- rollup -i ./src/fp.es6.js -o ./web/static/fp.rollup.js -f umd -n RiotApp",
    "babel:fp": "onchange './web/static/fp.rollup.js' -- babel ./web/static/fp.rollup.js -o ./web/static/fp.js",
    "sass:fp": "onchange './src/sass/**/*' -- node-sass ./src/sass/fp.sass -o  ./web/static/css/",
    "windev:fp": "start npm run riot && start npm run rollup:fp && start npm run babel:fp && start npm run sass:fp",
    "macdev:fp": "npm run riot & npm run rollup:fp & npm run babel:fp & npm run sass:fp",
    "build:fp": "gulp build:fp"
  },
  "repository": {
    "type": "git",
    "url": "https://git.coding.net/usho/fp.front.sosho.cn.git"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015-script": "^1.1.0",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^2.0.13",
    "gulp-make-css-url-version": "0.0.13",
    "gulp-rename": "^1.2.2",
    "gulp-uglifyjs": "^0.6.2",
    "md5-file": "^3.1.1",
    "onchange": "^3.2.0"
  }
}
